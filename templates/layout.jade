doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      | !{livereloadScript}
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      meta(name='robots', content='noindex,nofollow')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Cantarell:700|Cedarville+Cursive')
      link(rel='stylesheet', href='css/main.css')
      link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          include nav
    div#content
      div.content-wrap
        block content
          h2 Welcome to Little Chef Ivy
    footer
      div.content-wrap
        block footer
          section.copy
            img(src="images/little-chef-ivy-logo.svg", width='70px', height='auto', id='footer_logo')
            p &copy; #{ new Date().getFullYear() } #{ locals.owner }
          section.social
            a(href="#", class="fa fa-facebook")
            a(href="#", class="fa fa-twitter")
            a(href="#", class="fa fa-instagram")
            a(href="#", class="fa fa-youtube")
    script(type='text/javascript', src='scripts/analytics.js')
    script(type='text/javascript', src='scripts/main.js')
